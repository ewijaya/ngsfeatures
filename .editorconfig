# EditorConfig is awesome: https://EditorConfig.org
# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# C++ files
[*.{cc,cpp,h,hh,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Makefiles
[Makefile,makefile,*.mk]
indent_style = tab
indent_size = 4

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
